@using ReadingClub.Web.ViewModels.Discussions
@model IEnumerable<DiscussionViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Discussions</h2>

@if (Model.Count() > 0)
{
    foreach (var discussion in Model)
    {
        <div>
            <p>@Html.ActionLink(@discussion.Subject, "GetById", "Discussion", new { discussionId = discussion.Id }, new { @class = "action-link" })</p>
            <p>Book: @discussion.BookTitle, Author: @discussion.BookAuthor</p>
            <p>Start date: @discussion.StartDate</p>
            <p>End Date: @discussion.EndDate</p>
        </div>
    }
}

