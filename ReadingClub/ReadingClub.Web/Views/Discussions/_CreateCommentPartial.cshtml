@using ReadingClub.Web.ViewModels.Discussions
@model DetailDiscussionViewModel

@if (Request.IsAuthenticated && Model.StartDate <= DateTime.UtcNow && DateTime.UtcNow <= Model.EndDate)
{
<form id="create-comment">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <div>
            @Html.TextAreaFor(b => b.CreateCommentViewModel.Content, new { @class = "form-control", id = "comment-content" })
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Send" class="btn btn-success btn-sm" />
        </div>
    </div>
</form>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


