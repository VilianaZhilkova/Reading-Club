@using ReadingClub.Web.ViewModels.Books
@model IEnumerable<BookViewModel>
@{
    ViewBag.Title = "Books";
}

@if(Model.Count() > 0)
{
    foreach(var book in Model)
    {
        <div>
            @book.Id
            <p>@Html.ActionLink(@book.Title, "GetById", "Books", new { bookId = book.Id }, new { @class = "action-link" })</p>
            <p>@book.Author</p>
        </div>
    }
}
