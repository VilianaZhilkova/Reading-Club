@using ReadingClub.Web.ViewModels.Books
@model IEnumerable<BookViewModel>
@{
    ViewBag.Title = "Books";
}
<h1>Books</h1>
@if (User.Identity.IsAuthenticated)
{
    @Html.ActionLink("Add book", "AddBook", "Books", null, new { @class = "btn btn-success btn-sm", role = "button" })
}

@if(Model.Count() > 0)
{
    foreach(var book in Model)
    {
        <div>
            <p>@Html.ActionLink(@book.Title, "GetById", "Books", new { bookId = book.Id }, new { @class = "action-link" })</p>
            <p>@book.Author</p>
        </div>
    }
}
